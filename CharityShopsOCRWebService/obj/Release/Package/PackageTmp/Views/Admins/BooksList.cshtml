@model CharityShopsOCRWebService.Models.BooksList

@{
    ViewBag.Title = "BooksList";
}

<h2>BooksList</h2>

<table class="table">


    <tr>

        <th>
            @Html.DisplayName("ISBN")


        </th>

        <th>
            @Html.DisplayName("Title")
        </th>

        <th>
            @Html.DisplayName("Author")
        </th>

        <th>
            @Html.DisplayName("Quantity")
        </th>

        <th>
            @Html.DisplayName("Publisher")
        </th>

        <th>
            @Html.DisplayName("DatePublished")
        </th>

        <th>
            @Html.DisplayName("PageCount")
        </th>

        <th>
            @Html.DisplayName("Location")
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model.booksList)
    {
        String authors = "";
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @foreach (var author in item.Authors)
                {
                    authors = authors + author + " / ";
                }

                Html.DisplayFor(modelItem => authors)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.publisher)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DatePublished)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PageCount)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ShelfLocation)
            </td>
        </tr>
    }
</table>


